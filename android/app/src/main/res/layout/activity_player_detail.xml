<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="hearit"
            type="com.onair.hearit.domain.model.Hearit" />

        <variable
            name="viewModel"
            type="com.onair.hearit.presentation.detail.PlayerDetailViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/hearit_black1"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <ImageButton
                android:id="@+id/ib_player_detail_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:background="@color/hearit_black1"
                android:contentDescription="@null"
                android:src="@drawable/ic_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_player_detail_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_gradient_radius_8dp"
                android:contentDescription="@null"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ib_player_detail_back" />

            <TextView
                android:id="@+id/tv_hearit_player_title"
                style="@style/pretendard_main_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp"
                android:elevation="2dp"
                android:ellipsize="end"
                android:text="@{hearit.title}"
                app:layout_constraintBottom_toTopOf="@id/tv_hearit_player_date"
                app:layout_constraintEnd_toEndOf="@id/iv_player_detail_thumbnail"
                app:layout_constraintStart_toStartOf="@id/iv_player_detail_thumbnail"
                tools:text="HTTP와 HTTPS의 차이에 대해 알아볼까요" />

            <TextView
                android:id="@+id/tv_hearit_player_date"
                style="@style/pretendard_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="24dp"
                android:elevation="2dp"
                android:textColor="@color/hearit_gray2"
                app:formattedDate="@{hearit.createdAt}"
                app:layout_constraintBottom_toBottomOf="@id/iv_player_detail_thumbnail"
                app:layout_constraintStart_toStartOf="@id/iv_player_detail_thumbnail"
                tools:text="2025.07.28" />

            <ImageView
                android:id="@+id/btn_hearit_player_bookmark"
                android:layout_width="42dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bookmark_selector"
                android:contentDescription="@null"
                android:onClick="@{() -> viewModel.toggleBookmark()}"
                app:layout_constraintEnd_toEndOf="@id/iv_player_detail_thumbnail"
                app:layout_constraintTop_toBottomOf="@id/iv_player_detail_thumbnail"
                app:setSelectedState="@{viewModel.isBookmarked}" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_script"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginHorizontal="24dp"
                android:nestedScrollingEnabled="false"
                android:padding="16dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_hearit_player_bookmark"
                tools:listitem="@layout/item_script" />

            <androidx.media3.ui.PlayerView
                android:id="@+id/player_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_script"
                app:use_controller="false" />

            <com.onair.hearit.presentation.detail.BaseControllerView
                android:id="@+id/base_controller"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/player_view" />

            <TextView
                android:id="@+id/tv_player_detail_see_more_title"
                style="@style/pretendard_main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:text="@string/player_detail_read_more_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/base_controller" />

            <include
                android:id="@+id/layout_see_more"
                layout="@layout/layout_see_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="60dp"
                app:hearit="@{hearit}"
                app:layout_constraintBaseline_toBottomOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_player_detail_see_more_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
