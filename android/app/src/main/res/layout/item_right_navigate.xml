<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="navigateClickListener"
            type="kotlin.jvm.functions.Function0&lt;kotlin.Unit&gt;" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:onClick="@{() -> navigateClickListener.invoke()}"
        android:paddingStart="40dp">

        <TextView
            android:id="@+id/tv_navigate"
            style="@style/pretendard_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:text="@string/home_navigate_to_explore_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_right"
            app:layout_constraintEnd_toEndOf="@id/tv_navigate"
            app:layout_constraintStart_toStartOf="@id/tv_navigate"
            app:layout_constraintTop_toBottomOf="@id/tv_navigate"
            app:tint="@color/hearit_purple1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
